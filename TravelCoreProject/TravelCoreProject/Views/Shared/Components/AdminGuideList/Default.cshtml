<div class="col-md-6 col-lg-4 order-2 mb-4">
    <div class="card h-100">
        
        <div class="card-body">
            <ul class="p-0 m-0">
              
              
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <img src="~/sneat-1.0.0/assets/img/icons/unicons/paypal.png" alt="User" class="rounded" />
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                  
                            <h6 class="mb-0">Bize Ulaşın Gelen Mesaj Adeti</h6>
                        </div>
                        <div class="user-progress d-flex align-items-center gap-1">
                            <h6 class="mb-0">@ViewBag.contactUsCount</h6>
                 
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <img src="~/sneat-1.0.0/assets/img/icons/unicons/wallet.png" alt="User" class="rounded" />
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                     
                            <h6 class="mb-0">Site Toplam Yorumu</h6>
                        </div>
                        <div class="user-progress d-flex align-items-center gap-1">
                            <h6 class="mb-0">@ViewBag.commentCount</h6>
                  
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <img src="~/sneat-1.0.0/assets/img/icons/unicons/chart.png" alt="User" class="rounded" />
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                       
                            <h6 class="mb-0">Bültene Kayıtlı Kullanıcı Adeti</h6>
                        </div>
                        <div class="user-progress d-flex align-items-center gap-1">
                            <h6 class="mb-0">@ViewBag.newLetterCount</h6>
       
                        </div>
                    </div>
                </li>

                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <img src="~/sneat-1.0.0/assets/img/icons/unicons/chart-success.png" alt="User" class="rounded" />
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">

                            <h6 class="mb-0">Toplam Referans Adeti</h6>
                        </div>
                        <div class="user-progress d-flex align-items-center gap-1">
                            <h6 class="mb-0">@ViewBag.testimonial</h6>

                        </div>
                    </div>
                </li>
           
                
          
                
                
            </ul>
        </div>
    </div>
</div>