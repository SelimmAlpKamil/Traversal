<div class="col-lg-6 col-md-12 column pl-lg-5 column4 mt-lg-0 mt-5">
    <h3>Mail Bülteni</h3>
    <div class="end-column">
        <h4>Mail Bültenimize Abone Olun</h4>
        <form class="subscribe" asp-controller="NewLetter" asp-action="Index" method="post">
            <input type="email" name="NewLetterMail" placeholder="Mail" required="">
            <button type="submit">Abone Ol</button>
        </form>
        <p>Yeniliklerden haberdar olmak için mail bültenimize katılın</p>
        @if (TempData["ErrorNewLetter"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorNewLetter"]</div>
        }
    </div>
</div>
