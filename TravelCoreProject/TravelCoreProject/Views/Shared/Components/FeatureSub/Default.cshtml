@model IEnumerable<EntityLayer.Concreate.Destination>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
    <div class="row">
        @foreach(var x in Model){

         
               
                <div class="maghny-gd-1 col-6 mt-2">
                    <div class="maghny-grid">
                    <a href="/Destination/DestinationDetail/@x.DestinationId">
                        <figure class="effect-lily border-radius">
                            <img class="img-fluid" src="@x.DestinationImageDetail" alt="" style="height:300px" />
                            <figcaption>
                                <div>
                                    <h4>@x.DestinationDayAndNight</h4>
                                    <p>@x.DestinationPrice $</p>
                                </div>

                            </figcaption>
                        </figure>
                        </a>
                    </div>
                </div>
                
        
        }
       

    </div>
</div>