@model IEnumerable<EntityLayer.Concreate.Reservation>


@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">Onaylanan Geziler</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var x in Model)
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img src="@x.Destination.DestinationImageDetail" alt="kal" class="border-radius-lg shadow" style="height:50px; width:50px; object-fit:cover">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@x.Destination.DestinationCity</h6>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="/Destination/DestinationDetail/@x.DestinationId">@x.status</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>