<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Hemen Yorum Yap</h4>

    <form method="post" asp-controller="Commnet" asp-action="AddCommnet">

        <div class="form-group">
            <textarea name="CommentMessage" class="form-control" placeholder="Yorumunuz..." required=""
                      spellcheck="false"></textarea>
        </div>
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["error"].ToString()

            </div>
        }
        <br />
        <div class="input-grids row">

            <div class="form-group col-lg-12">
                <input type="text" name="CommentName" class="form-control" placeholder="İsminiz..."
                       required="">
            </div>
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger" role="alert" style="margin-left:10px">
                    @TempData["error"].ToString()

                </div>
            }
            <div class="form-group col-lg-12">
                <input type="text" name="DestinationId" value="@ViewBag.Id" class="form-control" placeholder="Your Name*"
                       required="" style="visibility:hidden">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>

</div>