
@{
    Layout = null;
}

<header id="site-header" class="fixed-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg stroke">
            <h1>
                <a class="navbar-brand mr-lg-5" href="/Home/Index">
                    Traversal
                </a>
            </h1>
            <button class="navbar-toggler  collapsed bg-gradient" type="button" data-toggle="collapse"
                    data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                <span class="navbar-toggler-icon fa icon-close fa-times"></span>
                
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto">
                    @if (TempData["active"] == "Home")
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Index">Ana Sayfa <span class="sr-only">(current)</span></a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Ana Sayfa <span class="sr-only">(current)</span></a>
                        </li>
                    }
                    @if (TempData["active"] == "About")
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/About/Index">Hakkımızda</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/About/Index">Hakkımızda</a>
                        </li>
                    }

                    @if (TempData["active"] == "Destination")
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/Destination/Index">Rotalar</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Destination/Index">Rotalar</a>
                        </li>
                    }

                    @if (TempData["active"] == "Contact")
                    {

                        <li class="nav-item active">
                            <a class="nav-link" href="/Contact/Index">İletişim</a>
                        </li>
                    }else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact/Index">İletişim</a>
                        </li>
                    }

                </ul>
            </div>
            <div class="d-lg-block d-none">
                <a href="/Login/SingIn" class="btn btn-style btn-secondary">Rezervasyon Yap</a>
            </div>
            <!-- toggle switch for light and dark theme -->
            <div class="mobile-position">
                <nav class="navigation">
                    <div class="theme-switch-wrapper">
                        <label class="theme-switch" for="checkbox">
                            <input type="checkbox" id="checkbox">
                            <div class="mode-container">
                                <i class="gg-sun"></i>
                                <i class="gg-moon"></i>
                            </div>
                        </label>
                    </div>
                </nav>
            </div>
            <!-- //toggle switch for light and dark theme -->
        </nav>
    </div>
</header>
