@model List<EntityLayer.Concreate.AppRole>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Role Listesi</h1>


@if (Model.Count()>0)
{
    <table class="table table-bordered">
        <tr>
            <td>Id</td>
            <td>İsim</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>
                <td>
                    <a href="/Admin/Role/DeleteRole/@x.Id" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Admin/Role/UppdateRole/@x.Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-danger">
        Henüz bir role eklenmemiş...
    </div>
}

<br />
<a href="/Admin/Role/AddRole" class="btn btn-primary" >Ekle</a>

<a href="/Admin/Role/UserIndex" class="btn btn-info" style="margin-top:20px">Rol Ekle</a>


