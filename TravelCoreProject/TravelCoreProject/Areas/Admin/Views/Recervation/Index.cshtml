@model IEnumerable<EntityLayer.Concreate.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Onay Bekleyen Rezervasyon Listesi</h1>

@if (Model.Count() > 0)
{
    <table class="table table-bordred">
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Rezervasyon Adeti</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Onayla</th>
            <th>İptal Et</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ReservationId</td>
                <td>@x.AppUser.Name</td>
                <td>@x.PersonCount</td>
                <td>@(x.ReservationDate.HasValue ? x.ReservationDate.Value.ToString("dd-MM-yyyy") : "")</td>
                <td>@x.status</td>
                <td>
                    <a href="/Admin/Recervation/PasifRecervation/@x.ReservationId" class="btn btn-danger">İptal Et</a>
                </td>
                <td>
                    <a href="/Admin/Recervation/ActiveRecervation/@x.ReservationId" class="btn btn-success">Onayla</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>Onay Bekleyen Rezervasyon Yoktur</h2>
}



<a style="margin-bottom:25px" href="/Admin/Recervation/ActiveRecervationList" class="btn btn-primary">Onaylanan Rezervasyonlar</a>
<a href="/Admin/Recervation/PasifRecervationList" class="btn btn-info">İptal Edilen Rezervasyonlar</a>

